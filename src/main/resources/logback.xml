<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<configuration>
    <variable file="src/main/resources/logback-vars-def.properties"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender" level="DEBUG">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender" level="DEBUG">
        <file>logs\${application.id}-v.${application.version}\currentLogs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                logs\${application.id}-v.${application.version}\ARCH\logsAtDate-%d{yyyy-MM-dd}.%i.zip
            </fileNamePattern>
            <maxHistory>50</maxHistory>
            <maxFileSize>1MB</maxFileSize>
            <!--            <totalSizeCap>2GB</totalSizeCap>-->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!--    <appender name="OTEL" class="com.example.logback.OpenTelemetryAppender">-->
    <!--        <encoder>-->
    <!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
    <!--        </encoder>-->
    <!--    </appender>-->
    <root>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
